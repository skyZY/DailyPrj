<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txt_junit_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="自动化测试"
        />

    <Button
        android:id="@+id/btn_junit_say"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_junit_say"
        android:layout_marginTop="20dp"
        android:text="Start SayHello"
        android:onClick="sayHello"
        />

    <Button
        android:id="@+id/btn_junit_cal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/btn_junit_say"
        app:layout_constraintTop_toBottomOf="@+id/txt_junit_say"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:text="Start Calculator"
        android:onClick="calculator"
        />

</androidx.constraintlayout.widget.ConstraintLayout>